# =============================================================================
# ML Portal Worker - Test Dockerfile
# =============================================================================
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies including OCR tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    libmagic1 \
    libmagic-dev \
    tesseract-ocr \
    tesseract-ocr-rus \
    poppler-utils \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements and install Python dependencies
COPY infra/docker/worker/requirements.txt ./requirements.txt
RUN python -m pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install test dependencies as additional layer
RUN pip install --no-cache-dir \
    pytest==7.4.4 \
    pytest-asyncio==0.23.2 \
    pytest-cov==4.1.0 \
    pytest-mock==3.12.0

# Copy application code
COPY apps/api/src/app/ ./app/

# Create non-root user
RUN groupadd -r appuser && useradd -r -g appuser appuser && \
    chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Default command for tests
CMD ["pytest", "app/tests/", "-v", "--cov=app", "--cov-report=html"]
