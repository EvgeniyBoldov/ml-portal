FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1 PIP_NO_CACHE_DIR=1
WORKDIR /app

# Минимальные системные зависимости
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    libmagic1 \
    libmagic-dev \
 && rm -rf /var/lib/apt/lists/*

# API зависимости
COPY infra/docker/api/requirements-api.txt ./requirements.txt
RUN python -m pip install --upgrade pip && pip install -r requirements.txt

# Тестовые зависимости
COPY infra/docker/api/requirements-test.txt ./requirements-test.txt
RUN python -m pip install -r requirements-test.txt

# Копируем только необходимые файлы
COPY apps/api/src/app/ ./app/
COPY apps/api/alembic.ini ./

# Копируем тесты
COPY apps/api/tests/ ./tests/

# Создаем non-root пользователя
RUN groupadd -r appuser && useradd -r -g appuser appuser
RUN chown -R appuser:appuser /app

# Переключаемся на non-root пользователя
USER appuser

# Устанавливаем переменные окружения для тестов
ENV PYTHONPATH=/app
ENV TESTING=true

# Команда по умолчанию для запуска тестов
CMD ["python", "-m", "pytest", "tests/", "-v", "--tb=short"]
