{
  "name": "ml-portal",
  "version": "0.1.0",
  "description": "ML Portal - Full Stack Application",
  "private": true,
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "test": "npm run test --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "format": "npm run format --workspace=apps/web",
    "docker:up": "docker-compose -f infra/compose/docker-compose.local.yml up --build",
    "docker:down": "docker-compose -f infra/compose/docker-compose.local.yml down",
    "docker:prod": "docker-compose -f infra/compose/docker-compose.prod.yml up --build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
