# =============================================================================
# ML Portal Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.development for development or .env.production for production

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# Proxy target for development (used by Vite dev server)
VITE_API_PROXY_TARGET=http://localhost:8000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name
VITE_APP_NAME=ML Portal

# Application environment
VITE_APP_ENV=development

# Application version
VITE_APP_VERSION=1.0.0

# =============================================================================
# DEVELOPMENT SERVER CONFIGURATION
# =============================================================================
# Vite dev server port
VITE_PORT=5173

# Vite preview server port
VITE_PREVIEW_PORT=4173

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Enable source maps in build (set to 'true' for production debugging)
VITE_SOURCEMAP=false

# =============================================================================
# FEATURES FLAGS
# =============================================================================
# Enable development features
VITE_ENABLE_DEV_TOOLS=true

# Mock API responses (for development without backend)
VITE_USE_MOCKS=false

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Sentry DSN for error tracking (optional)
# VITE_SENTRY_DSN=

# Analytics ID (optional)
# VITE_ANALYTICS_ID=

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Override for local development with different backend port
# VITE_API_BASE_URL=http://localhost:8080
# VITE_API_PROXY_TARGET=http://localhost:8080

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and set these for production deployment
# VITE_API_BASE_URL=https://api.your-domain.com
# VITE_APP_ENV=production
# VITE_SOURCEMAP=false
# VITE_ENABLE_DEV_TOOLS=false
